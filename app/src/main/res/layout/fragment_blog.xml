<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="HardcodedText"
    android:fillViewport="true"
    tools:context=".views.blogs.BlogFragment">

    <!-- header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/subBlue">

        <LinearLayout
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:contentDescription="back button"
                android:src="@drawable/back_icon" />
        </LinearLayout>

        <View
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"/>

        <LinearLayout
            android:id="@+id/editBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="edit button"
                android:src="@drawable/edit_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="delete button"
                android:src="@drawable/delete_icon" />
        </LinearLayout>

    </LinearLayout>

    <!-- Blog Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <!-- title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/mainBlue"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- date / time -->
            <TextView
                android:id="@+id/dateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="" />

            <!-- user and likes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By: "
                    android:textColor="@color/subBlue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textColor="@color/subBlue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"/>

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/likeBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" >

                    <ImageView
                        android:id="@+id/likeIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="heart button"
                        android:src="@drawable/gray_heart" />
                </LinearLayout>

            </LinearLayout>

            <!-- cover image -->
            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Blog cover image"
                android:src="@drawable/blue_rectangle_border" />

            <!-- content -->
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:justificationMode="inter_word"
                tools:ignore="UnusedAttribute" />

            <!-- comments section label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textColor="@color/mainBlue"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"/>

                <TextView
                    android:id="@+id/commentsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/mainBlue"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- comment input box start divider line -->
            <View
                android:layout_width = "match_parent"
                android:layout_height = "5dp"
                android:background="@color/subBlue"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

                <!-- sticker display -->
                <LinearLayout
                    android:id="@+id/stickerDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/blue_rectangle_border"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!--sticker search box -->
                    <LinearLayout
                        android:id="@+id/stickerSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical" >

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/stickerSearchBox"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight = "1"
                            android:hint="Search for stickers"
                            android:padding="3dp"
                            android:background="@color/white"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="30dp"
                            app:boxCornerRadiusBottomStart="30dp"
                            app:boxCornerRadiusTopEnd="30dp"
                            app:boxCornerRadiusTopStart="30dp"
                            app:boxStrokeColor="@color/subBlue"
                            app:endIconTint="@color/subBlue"
                            app:hintTextColor="@color/subBlue"
                            app:startIconTint="@color/subBlue">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/stickerSearchInput"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:textColorLink="@color/subBlue"
                                tools:ignore="KeyboardInaccessibleWidget" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/stickerSearchBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true" >

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:contentDescription="sticker search button"
                                android:src="@drawable/search_icon" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- selected sticker & sticker list -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/stickerSearch">

                        <ImageView
                            android:id="@+id/selectedSticker"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="selected sticker"
                            android:src="@drawable/gray_rectangle" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/stickersList"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- comment box -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/commentBox"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Comment"
                    android:padding="5dp"
                    android:background="@color/white"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxStrokeColor="@color/subBlue"
                    app:endIconTint="@color/subBlue"
                    app:hintTextColor="@color/subBlue"
                    app:startIconTint="@color/subBlue"
                    android:layout_below="@+id/stickerDisplay">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/commentInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:textColorLink="@color/subBlue"
                        tools:ignore="KeyboardInaccessibleWidget" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- buttons under comment box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/commentBox" >

                    <!-- sticker button -->
                    <LinearLayout
                        android:id="@+id/stickerBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="sticker button"
                            android:src="@drawable/sticker_icon" />
                    </LinearLayout>

                    <View
                        android:layout_width = "0dp"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"/>

                    <!-- clear comment box button -->
                    <Button
                        android:id="@+id/clearBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="@color/grayBtn"
                        android:text="Clear"
                        android:textColor="@color/black" />

                    <!-- submit comment button -->
                    <Button
                        android:id="@+id/submitBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/subBlue"
                        android:text="Comment" />
                </LinearLayout>
            </RelativeLayout>

            <!-- comment input box end divider line -->
            <View
                android:layout_width = "match_parent"
                android:layout_height = "3dp"
                android:background="@color/subBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subBlue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Sort by: "/>

                <View
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"/>

                <TextView
                    android:id="@+id/newestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/subBlue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/blue_rectangle_border"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Newest"/>

                <TextView
                    android:id="@+id/oldestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/subBlue"
                    android:alpha="0.5"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:background="@drawable/blue_rectangle_border"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Oldest"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>