<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notifIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/comment_icon"/>

        <TextView
            android:id="@+id/notifFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BobBobBobBobBobBobBobBobBobBobBobBobBob"
            android:textColor="@color/mainBlue"
            android:maxLines="1"
            android:maxEms="5"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/notifMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commented on your blog"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/blogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All About French Dictionaries"
            android:textColor="@color/mainBlue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>
</LinearLayout>