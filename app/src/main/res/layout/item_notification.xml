<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notifIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/comment_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notifFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BobBobBobBobBobBobBobBobBobBobBobBobBob"
                    android:textColor="@color/mainBlue"
                    android:maxLines="1"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/notifMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="commented on your blog"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/blogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All About French Dictionaries"
                    android:textColor="@color/mainBlue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/notifDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024/02/02 12:34:45"
                android:textColor="@color/subBlue"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width = "match_parent"
        android:layout_height = "1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/grayBtn"/>

</LinearLayout>